<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/daftar"
    android:background="@drawable/backgroundall"
    tools:context=".ui.daftarkerjasama.DaftarFragment">

    <TextView
        android:id="@+id/headingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Kerjasama"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Kerjasama ASEAN"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_outline"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/headingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Kerjasama Asia"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_outline2"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/headingText"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Kerjasama Eropa"
        android:background="@drawable/button_outline2"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Kerjasama Afrika"
        android:background="@drawable/button_outline"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Kerjasama Amerika"
        android:background="@drawable/button_outline"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Kerjasama Australia"
        android:background="@drawable/button_outline2"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Kerjasama Dalam Negeri"
        android:background="@drawable/button_outline2"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="96dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>